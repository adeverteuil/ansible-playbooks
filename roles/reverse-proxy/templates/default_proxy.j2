server {
    listen 80 default_server;
    server_name _;
    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    location /.well-known/acme-challenge {
    }

    location / {
        proxy_pass http://192.168.14.2;
{% include "_proxy_config.j2" %}
    }
}
